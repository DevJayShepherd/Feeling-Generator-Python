<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            padding: 15, 15
            spacing: 20, 20
            cols: 1
            Label:
                text: 'User Login'
                font_size: '22sp' 
            TextInput:
                id: UserName
                hint_text: 'Username'
            TextInput:
                id: PassWord
                hint_text: 'Password'
                password: True
            RelativeLayout:
                Button:
                    text: 'Login'
                    on_press: root.login(root.ids.UserName.text, root.ids.PassWord.text)
                    size_hint: 0.3, 0.6
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            Label:
                id: login_wrong
                text: ''
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                background_color: 1, 1, 1, 0  
                text: 'Forgot Password?'
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                background_color: 1, 1, 1, 0  
                text: 'Sign Up'
                on_press: root.sign_up()
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
    
<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        GridLayout:
            cols: 1
            Label:
                text: 'Sign Up Page'
        GridLayout:
            cols: 1
            size_hint: 0.2, 0.2
            TextInput:
                id: UserName
                hint_text: 'Choose Username'
        GridLayout:
            cols: 1
            size_hint: 0.2, 0.2
            TextInput:
                id: PassWord
                hint_text: 'Choose Password'
        GridLayout:
            cols: 1
            size_hint: 0.2, 0.2
            Button:
                text: 'Submit'
                on_press: root.add_user(root.ids.UserName.text, root.ids.PassWord.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: 'Success, you are now registered!'
        Button:
            text: 'Login page'
            on_press: root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                on_press: root.log_out()
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
        Label:
            text: 'How do you feel today?'
        TextInput:
            id: feeling
            hint_text: 'Try, Happy or Sad"'
        Button:
            text: 'Englighten Me!'
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:  
            Label:
                id: quote
                text: ''
                text_size: self.width, None
                size_hint_y: None 
                height: self.texture_size[1]
        

<RootWidget>:
    LoginScreen:
        name: 'login_screen'
    
    SignUpScreen:
        name: 'sign_up_screen'

    SignUpScreenSuccess:
        name: 'sign_up_screen_success'
    
    LoginScreenSuccess:
        name: 'login_screen_success'